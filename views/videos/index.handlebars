<div id="index-page" class="videos-container">
	{{#each videos as |video|}}
		<div class="video-card">
			<div class="video-title">
		  		<a href="videos/{{video._id}}">{{video.title}}</a>
		  		<p>{{video.description}}</p>

		  		<iframe class="video-player" src="{{video.url}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		 	</div>
		</div>
	{{/each}}
</div>

<a href="/videos/create">Create a new video</a>

