<div id="show-page" class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <iframe class="video-player" src="{{video.url}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>

    <a id="edit-button" href="/videos/{{video._id}}/edit">Edit video</a>
  </div>
</div>
